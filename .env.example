# =============================================================================
# SWATHOOPS - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# NEVER commit .env to version control.
# =============================================================================

# --- Database ---
DATABASE_URL="postgresql://user:password@localhost:5432/swathoops?schema=public"

# --- Authentication ---
JWT_SECRET="generate-a-strong-random-secret-here-min-32-chars"
# Token expiry duration (e.g., "7d", "24h", "30m")
JWT_EXPIRY="7d"
# Bcrypt salt rounds (10-14 recommended for production)
BCRYPT_SALT_ROUNDS="12"

# --- Admin Seed Credentials ---
# Used only during initial seeding (db:seed)
ADMIN_EMAIL="admin@swathoops.com"
ADMIN_PASSWORD="change-this-strong-password"

# --- Razorpay Payment Gateway ---
RAZORPAY_KEY_ID="rzp_test_xxxxxxxxxxxx"
RAZORPAY_KEY_SECRET="your-razorpay-secret-key"
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_xxxxxxxxxxxx"

# --- Application ---
NEXT_PUBLIC_APP_NAME="SWATHOOPS"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_DESCRIPTION="Premium Men's Footwear"

# --- Upload ---
# Max file upload size in bytes (default: 5MB = 5242880)
MAX_UPLOAD_SIZE="5242880"
# Comma-separated allowed MIME types
ALLOWED_UPLOAD_TYPES="image/jpeg,image/png,image/webp"

# --- Contact Information ---
NEXT_PUBLIC_CONTACT_EMAIL="support@swathoops.com"
NEXT_PUBLIC_CONTACT_PHONE="+91 8287524434"
NEXT_PUBLIC_CONTACT_ADDRESS="Mumbai, Maharashtra, India"

# --- Currency ---
NEXT_PUBLIC_CURRENCY="INR"
NEXT_PUBLIC_CURRENCY_SYMBOL="â‚¹"
NEXT_PUBLIC_DEFAULT_COUNTRY="India"
